<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- favicon -->
    <link rel="icon"
    href="https://upload.wikimedia.org/wikipedia/commons/5/52/Cut-clipart-1381892477534754276Cut.png"
    type="image/gif" sizes="50x50">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
    integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <title>URL Shortener</title>
</head>
<body>
    <div class="container">
        <h1>URL Shortener</h1>
        <form action="/shortUrls" method="POST" class="my-4 form-inline">
            <level for="fullurl" class="sr-only">Url</level>
            <input required type="url" name="fullurl" id="fullurl" placeholder="Url" class="form-control col mr-1">
            <button type="submit" class="btn btn-outline-success">Shrink</button>
        </form>
        <table class="table table-striped table-responsive table-hover">
            <thead>
                <tr>
                    <th>Full URL</th>
                    <th>Short URL</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% shortUrls.forEach(shortUrl => { %>
                    <tr>
                        <td><a href="<%= shortUrl.full %>" target="blank"><%= shortUrl.full %></a></td>
                        <td><a href="<%= shortUrl.short %>" target="blank"><%= shortUrl.short %></a></td>
                        <td><%= shortUrl.clicks %></td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>