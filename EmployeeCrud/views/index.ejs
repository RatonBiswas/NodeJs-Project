<%- include('partials/header') -%>

<div class="container mt-5">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>Name</th>
                <th>Designation</th>
                <th>Salary</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>Name</th>
                <th>Designation</th>
                <th>Salary</th>
                <th>Operations</th>
            </tr>
        </tfoot>
        <tbody>
            <% employees.forEach((employee) =>{ %>
                <tr>
                    <td><%= employee.name%></td>
                    <td><%= employee.designation%></td>
                    <td>$<%= employee.salary%></td>
                    <td>
                        <a class="btn btn-primary" href="/employee/edit/<%=employee.id%>">Edit</a>
                        <form style="display: inline;" action="/employee/delete/method=" POST">
                            <input type="hidden" name="_method" value="DELETE">
                            <button class="btn btn-danger ml-2" style="cursor: pointer;" type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
<%- include('partials/footer') -%>